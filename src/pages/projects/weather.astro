---
import Layout from "../../layouts/Layout.astro";
import metric from "../../assets/images/deep-dives/weather/metric.png";
import imperial from "../../assets/images/deep-dives/weather/imperial.png";
import weatherGif from "../../assets/images/deep-dives/weather/use.gif";
import { Image } from "astro:assets";
---

<Layout title="Weather App | Sam Popham" noParticles>
  <section class="max-w-6xl mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold mb-8">Weather Reporter — Deep Dive</h1>

    <p class="text-gray-600 dark:text-gray-400 mb-6">
      Desktop weather application built with PyQt6, focused on responsiveness
      and accessibility.
    </p>

    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <!-- 1: Multi-location card grid (image left) -->
      <li class="flex flex-col md:flex-row items-center gap-8 py-12">
        <figure class="md:w-1/2 w-full">
          <!--
            Image guidance:
            Multi-location card grid:
            - grid of weather cards showing temp, icon, brief details for multiple saved locations,
            - clean, accessible typography and consistent iconography.
          -->
          <Image
            src={metric}
            alt="Multi-location weather cards"
            class="w-full rounded-lg shadow-lg"
          />
        </figure>

        <article class="md:w-1/2 w-full">
          <h2 class="text-2xl font-semibold mb-3">Multi-Location Cards</h2>
          <p class="text-gray-600 dark:text-gray-400">
            See several saved locations at a glance — quick glances, quicker
            decisions.
          </p>
        </article>
      </li>

      <!-- 2: Autocomplete search (image right) -->
      <li
        class="flex flex-col md:flex-row md:flex-row-reverse items-center gap-8 py-12"
      >
        <figure class="md:w-1/2 w-full">
          <!--
            Image guidance:
            Autocomplete search with suggestions:
            - show search input with live suggestions and keyboard focus,
            - include country codes and highlight matched characters.
          -->
          <Image
            src={imperial}
            alt="Autocomplete search"
            class="w-full rounded-lg shadow-lg"
          />
        </figure>

        <article class="md:w-1/2 w-full">
          <h2 class="text-2xl font-semibold mb-3">Autocomplete Search</h2>
          <p class="text-gray-600 dark:text-gray-400">
            Keyboard-friendly autocomplete speeds up location entry — small UX
            details make big usability gains.
          </p>
        </article>
      </li>

      <!-- 3: Unit toggle / loading state (image left) -->
      <li class="flex flex-col md:flex-row items-center gap-8 py-12">
        <figure class="md:w-1/2 w-full">
          <!--
            Image guidance:
            Unit toggle and loading state:
            - show C/F toggle and a progressive loading indicator while fetching data,
            - example of cached result fallback if offline.
          -->
          <Image
            src={weatherGif}
            alt="Unit toggle and loading"
            class="w-full rounded-lg shadow-lg"
          />
        </figure>

        <article class="md:w-1/2 w-full">
          <h2 class="text-2xl font-semibold mb-3">Units & Loading</h2>
          <p class="text-gray-600 dark:text-gray-400">
            Responsive fetching with worker threads and smooth unit switching
            keeps the UI snappy and accessible.
          </p>
        </article>
      </li>
    </ul>
  </section>
</Layout>
